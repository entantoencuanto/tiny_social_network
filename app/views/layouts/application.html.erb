<!DOCTYPE html>
<html>
<head>
  <title>TinySocialNetwork</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if signed_in? %>
    Signed in as <%= link_to current_user, current_user %> &middot; <%= link_to('Sign out', sessions_path, :method => :delete) %> <br/>
    <%= render partial: 'shared/follows_links', locals: {user: current_user}%>
    <br />
    <br />
    <%= render partial: 'layouts/parts/menu' %>
  <% else %>
    <%= link_to('Sign up', sign_up_path) %> &middot; <%= link_to('Sign in', sign_in_path) %> <br/>
    <br />
    <br />
    <%= render partial: 'layouts/parts/signed_out_menu' %>
  <% end %>
  <%= render partial: 'layouts/parts/flash_messages' %>
    <%= link_to('API', api_users_path) %>
  <%= yield %>

</body>
</html>
