<!DOCTYPE html>
<html>
<head>
  <title>TinySocialNetwork</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if signed_in? %>
    Signed in as <%= current_user.user_name %> &middot; <%= link_to('Sign out', sessions_path, :method => :delete) %> <br/>
  <% end %>

  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
  <% end -%>

  <%= yield %>

</body>
</html>
