<p>
  <strong>User:</strong>
  <%= @user %>
</p>

<div class="follows">
<% if @is_followed %>
  <%= link_to 'Unfollow', unfollow_user_path(@user), method: :put %>
<% else %>
  <%= link_to 'Follow', follow_user_path(@user), method: :put %>
<% end %>
</div>


<%= link_to 'Followed users', user_followeds_path(@user) %>
<%= link_to 'Followers', user_followers_path(@user) %>
<%= link_to 'Messages', user_messages_path(@user) %>
<%= link_to 'Back', users_path %>
